<odoo>
    <data>
        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="proyectos_proyecto_tree">
            <field name="name">Proyectos</field>
            <field name="model">proyectos.proyecto</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="state"/>
                    <field name="cliente"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="proyectos_proyecto_form">
            <field name="name">Proyectos</field>
            <field name="model">proyectos.proyecto</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="aprobar_proyecto"
                                class="oe_highlight"
                                attrs="{'invisible':[('state','=','aprobado')]}"
                                groups="proyectos.proyectos_aprobar_proyecto"
                                string="Aprobar"
                                type="object">
                        </button>
                        <button name="desaprobar_proyecto"
                                attrs="{'invisible':[('state','!=','aprobado')]}"
                                groups="proyectos.proyectos_aprobar_proyecto"
                                string="Desaprobar"
                                type="object">
                        </button>
                        <button name="terminar_proyecto"
                                class="oe_highlight"
                                attrs="{'invisible':[('state','!=','aprobado')]}"
                                string="Terminar"
                                groups="proyectos.group_proyecto_manager"
                                type="object">
                        </button>
                        <button name="post_proyecto"
                                class="oe_highlight"
                                string="Postear"
                                type="object">
                        </button>
                        <field name="state" widget="statusbar"
                               statusbar_visible="proceso,aprobado,terminado,descartado"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="id"/>
                                <field name="name"/>
                                <field name="cliente"/>
                                <field name="presupuesto_winperfil"/>
                                <field name="numero_presupuesto"/>
                                <field name="presupuesto_adjunto"/>
                            </group>
                            <group>
                                <field name="currency_id"/>
                                <field name="fecha_aprobado"/>
                                <h3>Precios</h3>
                                <field name="precio_presupuestado"/>
                                <field name="precio_ejecutado"/>
                                <field name="precio_ejecutado_presupuesto"/>
                                <field name="precio_instalacion"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Modelos">
                                <control>
                                    <create name="add_modelo_proyecto_control" string="Agregar Modelo"/>
                                </control>
                                <field name="modelos">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <!--                                        <field name="proyecto_id"/>-->
                                        <field name="producto_id"/>
                                        <field name="cantidad"/>
                                        <field name="ancho"/>
                                        <field name="alto"/>
                                        <field name="precio"/>
                                        <field name="subtotal"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Instalaciones"></page>
                            <page name="etapas_page" string="Etapas">
<!--                                <field name="etapas" context="{'default_proyecto_id':active_id,'default_proyecto_context':id , 'default_name':name }">-->
<!--                                    <form>-->
<!--                                        <field name="name"/>-->
<!--                                        <field name="proyecto_id"/>-->
<!--                                        <field name="proyecto_context"/>-->
<!--                                        <field name="state"/>-->
<!--                                        <field name="fecha_inicio"/>-->
<!--                                        <field name="presupuesto_winperfil"/>-->
<!--                                    </form>-->

<!--                                </field>-->
                                <!--                                <field name="etapas" context="{'default_proyecto_id':active_id,'default_proyecto_context':id}"/>-->
                            </page>

                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="proyectos.proyectos_proyecto_action_window">
            <field name="name">Proyectos</field>
            <field name="res_model">proyectos.proyecto</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>

        <record id="proyectos.proyectos_etapa_act_view" model="ir.actions.act_window">
            <field name="name">Etapas</field>
            <field name="res_model">proyectos.etapa</field>
            <field name="context">{'default_proyecto_id':active_id}</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>

        <menuitem name="Proyectos" id="proyectos.menu_root" action="proyectos.proyectos_proyecto_action_window"/>
                <menuitem name="Etapas" parent="proyectos.menu_root" id="proyectos.etapas_menu"
                          action="proyectos.proyectos_etapa_act_view"/>


    </data>
</odoo>