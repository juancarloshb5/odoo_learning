<odoo>
    <data>
        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="opma_proyecto_tree">
            <field name="name">Proyectos</field>
            <field name="model">opma.proyecto</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="state"/>
                    <field name="cliente"/>
                </tree>
            </field>
        </record>


        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="proyectos.opma_proyecto_action_window">
            <field name="name">Proyectos</field>
            <field name="res_model">opma.proyecto</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>
         <menuitem name="Proyectos" id="proyectos.menu_root" action="proyectos.opma_proyecto_action_window"/>


    </data>
</odoo>